{
  "compilerOptions": {
    "target": "es2022",                                  
    "module": "CommonJS",                             
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                   
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node"                               
  },
  "include": [
    "./src/*"
  ]             
}
